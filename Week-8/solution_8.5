class Solution {
public:
    int findJudge(int n, vector<vector<int>>& trust) {
        vector<int> count(n+1,0);
        for(vector<int> inside : trust)
        {
            count[inside[0]]--;
            count[inside[1]]++;
        }
        for(int i=1;i<=n;i++)
        {
            if(count[i]==n-1)
            {
                return i;
            }
        }
        return -1;
    }
};


// time comp: o(n)
// space comp: o(n)
